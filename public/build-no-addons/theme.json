      "core/paragraph": {
        "typography": {
          "lineHeight": "1.6"
        },
        "spacing": {
          "margin": {
            "bottom": "var(--wp--preset--spacing--normal)"
          }
        }
      },
      "core/quote": {
        "typography": {
          "fontStyle": "italic",
          "fontSize": "var(--wp--preset--font-size--medio)"
        },
        "color": {
          "text": "var(--wp--preset--color--texto)"
        },
        "border": {
          "left": {
            "width": "4px",
            "style": "solid",
            "color": "var(--wp--preset--color--primaria)"
          }
        },
        "spacing": {
          "padding": {
