          "fontFamily": "var(--wp--preset--font-family--roboto)",
          "fontSize": "var(--wp--preset--font-size--pequeno)",
          "fontWeight": "500",
          "lineHeight": "1.5",
          "textTransform": "uppercase",
          "letterSpacing": "0.5px"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--primaria)"
        },
        ":hover": {
          "color": {
            "text": "var(--wp--preset--color--secundaria)"
          }
        }
      },
      "button": {
        "color": {
          "background": "var(--wp--preset--color--primaria)",
          "text": "#ffffff"
        },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--roboto)",
          "fontSize": "var(--wp--preset--font-size--normal)",
          "fontWeight": "500"
        },
        "border": {
          "radius": "4px"
        },
        "spacing": {
          "padding": {
            "top": "var(--wp--preset--spacing--normal)",
            "right": "var(--wp--preset--spacing--medio)",
            "bottom": "var(--wp--preset--spacing--normal)",
            "left": "var(--wp--preset--spacing--medio)"
          }
        },
        ":hover": {
          "color": {
            "background": "var(--wp--preset--color--secundaria)"
          }
        }
      }
